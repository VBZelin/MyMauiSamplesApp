<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage
    x:Class="MyMauiSamplesApp.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyMauiSamplesApp"
    StatusBarColor="{StaticResource Primary}">
    <ScrollView Margin="20">
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image
                Aspect="AspectFit"
                HeightRequest="185"
                SemanticProperties.Description="dot net bot in a hovercraft number nine"
                Source="dotnet_bot.png" />
            <Label
                SemanticProperties.HeadingLevel="Level1"
                Style="{StaticResource Headline}"
                Text="Hello, World!" />
            <Label
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                SemanticProperties.HeadingLevel="Level2"
                Style="{StaticResource SubHeadline}"
                Text="Welcome to &#10;.NET Multi-platform App UI" />
            <Button
                Clicked="OnPreferenceClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Shows preference sample"
                Text="Preference Sample" />
            <Button
                Clicked="OnRadCollectionViewClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Shows radCollectionView sample"
                Text="RadCollectionView Sample" />
            <Button
                Clicked="OnTransparentStatusBarClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Shows transparentStatusBar sample"
                Text="TransparentStatusBar Sample" />
            <Button
                Clicked="OnSideDrawerClicked"
                HorizontalOptions="Fill"
                SemanticProperties.Hint="Shows sideDrawer sample"
                Text="SideDrawer Sample" />
        </VerticalStackLayout>
    </ScrollView>
</local:BasePage>
