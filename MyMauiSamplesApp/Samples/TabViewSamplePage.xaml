<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage
    x:Class="MyMauiSamplesApp.TabViewSamplePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyMauiSamplesApp"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui"
    x:DataType="local:TabViewSamplePage">
    <telerik:RadTabView x:Name="tabView" AutomationId="tabView">
        <telerik:RadTabView.HeaderItemTemplate>
            <ControlTemplate>
                <local:TouchArea BackgroundColor="AliceBlue" TouchFeedbackBorderColor="Black">
                    <local:TouchArea.TouchAreaBackgroundView>
                        <Label
                            BackgroundColor="AliceBlue"
                            HeightRequest="50"
                            HorizontalTextAlignment="Center"
                            Text="{TemplateBinding Text}"
                            VerticalTextAlignment="Center" />
                    </local:TouchArea.TouchAreaBackgroundView>
                </local:TouchArea>
            </ControlTemplate>
        </telerik:RadTabView.HeaderItemTemplate>
        <telerik:TabViewItem HeaderText="Home">
            <Label Margin="10" Text="This is the content of the Home tab" />
        </telerik:TabViewItem>
        <telerik:TabViewItem HeaderText="Folder">
            <Label Margin="10" Text="This is the content of the Folder tab" />
        </telerik:TabViewItem>
        <telerik:TabViewItem HeaderText="View">
            <Label Margin="10" Text="This is the content of the View tab" />
        </telerik:TabViewItem>
    </telerik:RadTabView>
</local:BasePage>
