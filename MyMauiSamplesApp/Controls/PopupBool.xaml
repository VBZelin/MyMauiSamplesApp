<toolkit:Popup
    x:Class="MyMauiSamplesApp.PopupBool"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Padding="10"
    x:TypeArguments="system:Boolean">

    <VerticalStackLayout Spacing="6">
        <Label Text="This is a very important message! Do you agree?" />

        <Button Clicked="OnYesButtonClicked" Text="Yes" />

        <Button Clicked="OnNoButtonClicked" Text="No" />

    </VerticalStackLayout>

</toolkit:Popup>