<ContentView
    x:Class="MyMauiSamplesApp.BottomSheet"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyMauiSamplesApp"
    xmlns:telerik="http://schemas.telerik.com/2022/xaml/maui">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <telerik:RadSideDrawer
                x:Name="drawer"
                DrawerLength="{TemplateBinding DrawerLength}"
                DrawerLocation="{TemplateBinding DrawerLocation}"
                DrawerTransitionType="{TemplateBinding DrawerTransitionType}"
                HandlerChanged="OnHandlerChanged">
                <telerik:RadSideDrawer.MainContent>
                    <Grid />
                </telerik:RadSideDrawer.MainContent>
                <telerik:RadSideDrawer.DrawerContent>
                    <ContentPresenter />
                </telerik:RadSideDrawer.DrawerContent>
            </telerik:RadSideDrawer>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
